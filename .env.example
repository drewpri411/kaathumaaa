# OpenAI API Configuration
# Used for: Whisper Speech-to-Text API, TTS (Text-to-Speech) API, LLM (GPT-4o-mini)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Audio Configuration (Advanced - usually don't need to change)
SAMPLE_RATE=16000
CHANNELS=1

# VAD Configuration
VAD_THRESHOLD=0.5
VAD_MIN_SPEECH_DURATION_MS=250
VAD_MIN_SILENCE_DURATION_MS=300

# Turn Detection Thresholds
SHORT_PAUSE_MS=400
MEDIUM_PAUSE_MS=1000
LONG_PAUSE_MS=1500
TURN_END_SCORE_THRESHOLD=65

# Backchannel Configuration
BACKCHANNEL_BASE_PROBABILITY=0.4
BACKCHANNEL_MIN_INTERVAL_S=5
BACKCHANNEL_VOLUME=0.5

# LLM Configuration
LLM_MODEL=gpt-4o-mini
LLM_MAX_TOKENS=150
LLM_TEMPERATURE=0.7

# TTS Configuration
TTS_VOICE=alloy
TTS_MODEL=tts-1
